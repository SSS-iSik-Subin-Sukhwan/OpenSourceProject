<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="108dp">

            <TextView
                android:id="@+id/nameOfLocation"
                style="@style/LocationStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="18dp"
                android:paddingTop="12dp"
                android:paddingRight="18dp"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"

                />

            <TextView
                android:id="@+id/nameOfAddress"
                style="@style/AddressStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/nameOfLocation"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/underLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/yesBtn"
                style="@style/ButtonWhiteBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/rectangleblack"
                android:padding="20dp"
                android:text="출발 위치로 설정" />


        </RelativeLayout>
    </FrameLayout>
</LinearLayout>