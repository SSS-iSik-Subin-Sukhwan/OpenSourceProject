<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/InfraRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity ="center"
        >
        <!--        android:background="@drawable/greywhite"-->

        <TextView
            android:id="@+id/list01"
            style="@style/BlackTopWhite"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/black"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="60dp"
            android:text="반경 1km 이내의 \n음식점 리스트입니다."

            />

        <LinearLayout
            android:id="@+id/buttonList01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_below="@id/list01"
            >




        </LinearLayout>



        <ListView
            android:id="@+id/foodListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/buttonList01"
            />



    </RelativeLayout>
</LinearLayout>